<Footer>:
    size_hint_y: None
    height: "50dp"
    padding: "10dp"
    canvas.before:
        Color:
            rgba: 0.8, 0.77, 0.72, 1  # Fondo CCC5B9
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1  # Borde negro
        Line:
            rectangle: (*self.pos, *self.size)
            width: 3
    Label:
        text: "Viaja con una revisión de cansancio"
        font_size: '14sp'
        color: 0, 0, 0, 1  # Cambié el texto a negro para que contraste
