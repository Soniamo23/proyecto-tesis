<Header>:
    size_hint_y: None
    height: "60dp"
    padding: "10dp"
    spacing: "10dp"
    canvas.before:
        Color:
            rgba: 0.8, 0.77, 0.72, 1  # Fondo CCC5B9
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1  # Borde negro
        Line:
            rectangle: (*self.pos, *self.size)
            width: 3

    # Logo a la izquierda
    Image:
        source: 'assets/logo.png'  # Usa tu logo real aquí
        size_hint_x: 0.2
        allow_stretch: True
        keep_ratio: True

    # Espaciador
    Widget:

    # Botón a la derecha
    Button:
        text: "⚙"
        size_hint_x: 0.15
        font_size: '20sp'
        background_normal: ''
        background_color: 0.1, 0.1, 0.1, 0.5
        color: 1, 1, 1, 1
        on_press: print("Configuración presionada")
