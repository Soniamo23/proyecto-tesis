<ReportScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"

        canvas.before:
            Color:
                rgba: 1, 0.99, 0.95, 1  # Color de fondo claro
            Rectangle:
                pos: self.pos
                size: self.size

            # Borde negro alrededor del rect√°ngulo
            Color:
                rgba: 0, 0, 0, 1  # Color negro para el borde
            Line:
                width: 2  # Ancho del borde
                rectangle: (self.x, self.y, self.width, self.height)

        Button:
            text: "Iniciar viaje"
            size_hint: 0.6, None
            height: "50dp"
            pos_hint: {"center_x": 0.5}
            font_size: '18sp'
            on_press: root.on_start_trip()
