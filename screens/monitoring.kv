<DriverMonitoringScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        canvas.before:
            Color:
                rgba: 1, 0.99, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: header_label
            text: "ðŸ§  Monitor de AtenciÃ³n del Conductor"
            size_hint: 1, 0.1
            font_size: '20sp'

        Image:
            id: img_widget
            size_hint: 1, 0.6

        TextInput:
            id: report_box
            readonly: True
            font_size: '14sp'
            size_hint: 1, 0.2
            text: "Esperando primer reporte..."

        Label:
            id: footer_label
            text: "Estado: Iniciando..."
            size_hint: 1, 0.1
            font_size: '16sp'

        Button:
            text: "Finalizar viaje"
            size_hint: 1, 0.1
            font_size: '16sp'
            on_press: root.end_trip()
