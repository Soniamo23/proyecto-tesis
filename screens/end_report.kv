<EndReportScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"

        canvas.before:
            Color:
                rgba: 1, 0.99, 0.95, 1  # #FFFCF2 en rgba
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "âœ… Esta es la pantalla final del viaje."
            font_size: '18sp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Button:
            text: "Volver al inicio"
            size_hint: 0.5, None
            height: "50dp"
            pos_hint: {"center_x": 0.5}
            on_press: root.go_to_home()
