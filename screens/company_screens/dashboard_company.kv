<DashboardCompanyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Button:
            text: 'Ver Reportes'
            font_size: 24
            size_hint: (0.5, 0.2)
            pos_hint: {'center_x': 0.5}
            on_press: root.ver_reportes()

        Button:
            text: 'Agregar Administrador'
            font_size: 24
            size_hint: (0.5, 0.2)
            pos_hint: {'center_x': 0.5}
            on_press: root.agregar_administrador()
