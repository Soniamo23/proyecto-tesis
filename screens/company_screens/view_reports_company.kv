<ViewReportsCompanyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            
            Label:
                id: driver_name_label
                text: "Reportes del Conductor"
                font_size: 24
                bold: True
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.7
            
            Button:
                text: "Actualizar"
                size_hint_x: 0.15
                on_press: root.refresh_reports()
            
            Button:
                text: "Volver"
                size_hint_x: 0.15
                on_press: root.go_back()
        
        # Informaci√≥n de resumen
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            
            Label:
                text: "Reportes finales de todos los tipos de gestos detectados"
                font_size: 16
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: 0.6, 0.6, 0.6, 1
        
        # Lista de reportes con scroll
        ScrollView:
            BoxLayout:
                id: reports_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 15
                padding: 10