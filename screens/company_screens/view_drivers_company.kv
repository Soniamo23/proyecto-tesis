<ViewDriversCompanyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            
            Label:
                text: "Conductores de la Compañía"
                font_size: 24
                bold: True
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.7
            
            Button:
                text: "Actualizar"
                size_hint_x: 0.15
                on_press: root.refresh_drivers()
            
            Button:
                text: "Volver"
                size_hint_x: 0.15
                on_press: root.go_back()
        
        # Información de resumen
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            
            Label:
                text: "Lista de todos los conductores registrados en su compañía"
                font_size: 16
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: 0.6, 0.6, 0.6, 1
        
        # Lista de conductores con scroll
        ScrollView:
            BoxLayout:
                id: drivers_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10