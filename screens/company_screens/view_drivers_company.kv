<ViewDriversCompanyScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: 16
        spacing: 16
        
        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 56
            spacing: 12
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1  # Borde sutil
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            Label:
                text: "Conductores de la Compañía - company"
                font_size: 32
                bold: True
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.7
                color: 0, 0, 0, 1  # Texto negro
                padding: 8, 0
            
            Button:
                text: "Actualizar"
                size_hint_x: 0.15
                font_size: 32
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_press: root.refresh_drivers()
            
            Button:
                text: "Volver"
                size_hint_x: 0.15
                font_size: 32
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_press: root.go_back()
        
        # Información de resumen
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 48
            padding: 12, 8
            
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  # Fondo gris muy claro
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 0.2  # Borde sutil
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            Label:
                text: "Lista de todos los conductores registrados en su compañía"
                font_size: 32
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: 0.3, 0.3, 0.3, 1  # Texto gris oscuro
        
        # Lista de conductores con scroll
        ScrollView:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1  # Borde del ScrollView
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            BoxLayout:
                id: drivers_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 12
                padding: 12
                
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Fondo blanco del contenedor
                    Rectangle:
                        pos: self.pos
                        size: self.size