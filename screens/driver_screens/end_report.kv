<EndReportScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        
        canvas.before:
            Color:
                rgba: 1, 0.99, 0.95, 1  # Fondo claro
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: "10dp"
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)
            
            Label:
                text: "üõë Fin del Viaje"
                font_size: '20sp'
                halign: 'center'
                valign: 'middle'
                color: 0, 0, 0, 1

        # Body (mensajes finales + bot√≥n)
        BoxLayout:
            orientation: 'vertical'
            spacing: "15dp"
            padding: "10dp"
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)

            Label:
                text: "‚úÖ Resumen Final del Viaje"
                font_size: '18sp'
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "50dp"

            # Scroll view para los reportes
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                
                BoxLayout:
                    orientation: 'vertical'
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    
                    # Reporte de parpadeos
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"
                        
                        canvas.before:
                            Color:
                                rgba: 0.9, 0.9, 1, 1  # Fondo azul claro
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        Label:
                            id: final_blink_label
                            text: "üìä Reporte de parpadeos: Cargando..."
                            font_size: '14sp'
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True
                    
                    # Reporte de bostezos
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"
                        
                        canvas.before:
                            Color:
                                rgba: 1, 1, 0.9, 1  # Fondo amarillo claro
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        Label:
                            id: final_yawn_label
                            text: "üü° Reporte de bostezos: Cargando..."
                            font_size: '14sp'
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True
                    
                    # Reporte de frotamiento de ojos
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"
                        
                        canvas.before:
                            Color:
                                rgba: 1, 0.9, 0.9, 1  # Fondo rosa claro
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        Label:
                            id: final_eye_rub_label
                            text: "üëê Frotamiento de ojos: Cargando..."
                            font_size: '14sp'
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True
                    
                    # Reporte de cabeceo
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"
                        
                        canvas.before:
                            Color:
                                rgba: 0.9, 1, 0.9, 1  # Fondo verde claro
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        Label:
                            id: final_nod_label
                            text: "ü§ï Cabeceo: Cargando..."
                            font_size: '14sp'
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True

            # Bot√≥n para volver al inicio
            Button:
                text: "Volver al inicio"
                size_hint: 0.5, None
                height: "50dp"
                pos_hint: {"center_x": 0.5}
                on_press: root.go_to_home()

        # Footer (margen / espacio visual)
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            padding: "10dp"
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)