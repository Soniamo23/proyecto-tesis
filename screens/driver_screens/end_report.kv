<EndReportScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Fondo blanco
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: "10dp"

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 2
                    rectangle: (*self.pos, *self.size)

            Label:
                text: "üõë Fin del Viaje"
                font_size: 32
                halign: 'center'
                valign: 'middle'
                color: 0, 0, 0, 1

        # Body
        BoxLayout:
            orientation: 'vertical'
            spacing: "15dp"
            padding: "10dp"

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 2
                    rectangle: (*self.pos, *self.size)

            Label:
                text: "‚úÖ Resumen Final del Viaje"
                font_size: 32
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "50dp"

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                BoxLayout:
                    orientation: 'vertical'
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height

                    # Reutilizable estilo para cada reporte
                    # Puedes personalizar fondo si quieres diferenciar

                    # Reporte 1
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"

                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: (*self.pos, *self.size)

                        Label:
                            id: final_blink_label
                            text: "üìä Reporte de parpadeos: Cargando..."
                            font_size: 32
                            color: 0, 0, 0, 1
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True

                    # Reporte 2
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"

                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: (*self.pos, *self.size)

                        Label:
                            id: final_yawn_label
                            text: "üü° Reporte de bostezos: Cargando..."
                            font_size: 32
                            color: 0, 0, 0, 1
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True

                    # Reporte 3
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"

                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: (*self.pos, *self.size)

                        Label:
                            id: final_eye_rub_label
                            text: "üëê Frotamiento de ojos: Cargando..."
                            font_size: 32
                            color: 0, 0, 0, 1
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True

                    # Reporte 4
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "5dp"

                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: (*self.pos, *self.size)

                        Label:
                            id: final_nod_label
                            text: "ü§ï Cabeceo: Cargando..."
                            font_size: 32
                            color: 0, 0, 0, 1
                            halign: 'left'
                            valign: 'top'
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            markup: True

            Button:
                text: "Volver al inicio"
                size_hint: 0.5, None
                height: "50dp"
                pos_hint: {"center_x": 0.5}
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rounded_rectangle: (*self.pos, *self.size, 10)

                on_press: root.go_to_home()

        # Footer
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            padding: "10dp"

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 2
                    rectangle: (*self.pos, *self.size)
