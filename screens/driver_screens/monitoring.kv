<DriverMonitoringScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        canvas.before:
            Color:
                rgba: 1, 0.99, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        Label:
            id: header_label
            text: "üß† Monitor de Atenci√≥n del Conductor"
            size_hint: 1, 0.1
            font_size: '20sp'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)

        # Body
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            spacing: 10
            padding: 10
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)

            # Video
            Image:
                id: img_widget
                size_hint_y: 0.5
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 3
                        rectangle: (*self.pos, *self.size)

            # Reportes
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 450   # m√°s alto para que quepan los mensajes largos
                spacing: 8

                # Reporte Ojos
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 100    # aumentado para m√°s texto
                    padding: 5
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: eyes_report_label
                        text: "üëÄ Ojos:"
                        size_hint_x: 0.25
                        font_size: '13sp'
                    Label:
                        id: eyes_message_label
                        text: "Esperando..."
                        markup: True
                        size_hint_x: 0.75
                        font_size: '13sp'
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'middle'

                # Reporte Parpadeo
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 100
                    padding: 5
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: blink_report_label
                        text: "üëÅÔ∏è Parpadeo:"
                        size_hint_x: 0.25
                        font_size: '13sp'
                    Label:
                        id: blink_message_label
                        text: "Esperando..."
                        markup: True
                        size_hint_x: 0.75
                        font_size: '13sp'
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'middle'

                # Reporte Cabeceo
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 100
                    padding: 5
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: nod_report_label
                        text: "ü§ï Cabeceo:"
                        size_hint_x: 0.25
                        font_size: '13sp'
                    Label:
                        id: nod_message_label
                        text: "Esperando..."
                        markup: True
                        size_hint_x: 0.75
                        font_size: '13sp'
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'middle'

                # Reporte Bostezo
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 100
                    padding: 5
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: yawn_report_label
                        text: "üò™ Bostezo:"
                        size_hint_x: 0.25
                        font_size: '13sp'
                    Label:
                        id: yawn_message_label
                        text: "Esperando..."
                        markup: True
                        size_hint_x: 0.75
                        font_size: '13sp'
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'middle'

                # Reporte Microsue√±o
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 100
                    padding: 5
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "üõå Microsue√±o:"
                        size_hint_x: 0.25
                        font_size: '13sp'
                    Label:
                        id: microsleep_message_label
                        text: "Esperando..."
                        markup: True
                        size_hint_x: 0.75
                        font_size: '13sp'
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'middle'

            # Bot√≥n finalizar
            Button:
                text: "Finalizar viaje"
                size_hint: 1, None
                height: "50dp"
                font_size: '16sp'
                on_press: root.end_trip()

        # Footer
        Label:
            id: footer_label
            text: "Estado: Iniciando..."
            size_hint: 1, 0.1
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    rectangle: (*self.pos, *self.size)
