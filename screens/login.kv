<LoginScreen>:
    name: "login"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1  # Borde negro
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 2

    BoxLayout:
        orientation: "vertical"
        padding: [30, 50, 30, 50]
        spacing: 25

        Label:
            text: "Iniciar Sesión"
            font_size: 32
            color: 0, 0, 0, 1
            size_hint_y: None
            height: "60dp"
            text_size: self.size
            halign: "center"
            valign: "middle"
            bold: True

        Widget:
            size_hint_y: None
            height: "20dp"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: "70dp"
            spacing: 5

            Label:
                text: "Correo Electrónico:"
                font_size: 32
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "25dp"
                text_size: self.size
                halign: "left"
                valign: "middle"

            TextInput:
                id: email_input
                hint_text: "Ingresa tu email"
                multiline: False
                font_size: 32
                padding: [10, 10]
                foreground_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                cursor_color: 0, 0, 0, 1
                size_hint_y: None
                height: "45dp"
                background_active: ''
                background_normal: ''
                background_disabled_normal: ''
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1.5

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: "70dp"
            spacing: 5

            Label:
                text: "Contraseña:"
                font_size: 32
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "25dp"
                text_size: self.size
                halign: "left"
                valign: "middle"

            TextInput:
                id: password_input
                hint_text: "Ingresa tu contraseña"
                password: True
                multiline: False
                font_size: 32
                padding: [10, 10]
                foreground_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                cursor_color: 0, 0, 0, 1
                size_hint_y: None
                height: "45dp"
                background_active: ''
                background_normal: ''
                background_disabled_normal: ''
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1.5

        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: None
            height: "30dp"
            text_size: self.size
            halign: "center"
            valign: "middle"
            font_size: 32

        Widget:
            size_hint_y: None
            height: "20dp"

        Button:
            text: "Iniciar Sesión"
            font_size: 32
            bold: True
            size_hint_y: None
            height: "55dp"
            background_normal: ''
            background_down: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            on_press: root.login()
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2

        Button:
            text: "Crear Cuenta"
            font_size: 32
            bold: True
            size_hint_y: None
            height: "55dp"
            background_normal: ''
            background_down: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            on_press: app.root.current = "type_account"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
