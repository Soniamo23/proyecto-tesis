<ViewTripsAdminScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(16)

        # Header con botón de regreso y título
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            spacing: dp(16)

            Button:
                text: "← Regresar"
                size_hint_x: None
                width: dp(140)
                font_size: 32
                background_normal: ''
                background_down: ''
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                on_press: root.go_back()

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(6)]
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, dp(6)
                        width: dp(2)

                canvas.after:
                    Color:
                        rgba: (0.9, 0.9, 0.9, 1) if self.state == 'down' else (0, 0, 0, 0)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(6)]

            Label:
                id: title_label
                text: "Viajes del Conductor"
                font_size: 32
                bold: True
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

        # Información del conductor
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(50)
            spacing: dp(8)
            padding: dp(10)

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(2)

            Label:
                id: driver_info_label
                text: "Seleccione un conductor"
                font_size: 32
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

        # Contenedor scrollable para la lista de viajes
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            canvas.before:
                Color:
                    rgba: 0.98, 0.98, 0.98, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(2)

            BoxLayout:
                id: trips_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: [dp(15), dp(15), dp(15), dp(15)]

        # Status label
        BoxLayout:
            size_hint_y: None
            height: dp(50)

            Label:
                id: status_label
                text: ""
                font_size: 32
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None
