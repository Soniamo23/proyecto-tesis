<ViewTripsAdminScreen>:
    name: "view_trips_company"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        # Header con botón de regreso y título
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)

            Button:
                text: "← Regresar"
                size_hint_x: None
                width: dp(120)
                background_color: (1, 1, 1, 1)
                color: (0, 0, 0, 1)
                on_press: root.go_back()

            Label:
                id: title_label
                text: "Viajes del Conductor"
                font_size: 32
                bold: True
                color: (0, 0, 0, 1)
                halign: 'center'
                valign: 'middle'

        # Información del conductor
        Label:
            id: driver_info_label
            text: "Seleccione un conductor"
            font_size: 32
            size_hint_y: None
            height: dp(40)
            color: (0, 0, 0, 1)
            halign: 'left'
            valign: 'middle'

        # Contenedor scrollable para la lista de viajes
        ScrollView:
            GridLayout:
                id: trips_list
                cols: 1
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
                padding: dp(5)

        # Botones de acción
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Button:
                text: "Actualizar"
                size_hint_x: 0.3
                background_color: (0.2, 0.6, 0.8, 1)
                on_press: root.refresh_trips()

            Label:
                id: status_label
                text: ""
                font_size: 32
                color: (0.6, 0.6, 0.6, 1)
                size_hint_x: 0.7
                halign: 'left'
                valign: 'middle'
