<ViewDetailedReportsAdminScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco para toda la pantalla
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        # T√≠tulo principal
        Label:
            id: title_label
            text: "Reportes Detallados"
            font_size: 32
            bold: True
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1] + 20
            color: 0, 0, 0, 1  # Texto negro
        
        # Informaci√≥n del viaje
        Label:
            id: trip_info_label
            text: "Cargando informaci√≥n del viaje..."
            font_size: 32
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1] + 20
            color: 0, 0, 0, 1  # Texto negro
        
        # Botones de navegaci√≥n
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 10
            
            Button:
                text: "‚Üê Volver"
                size_hint_x: 0.3
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1, 1, 1, 1  # Fondo blanco
                    Rectangle:
                        pos: self.pos[0] + 2, self.pos[1] + 2
                        size: self.size[0] - 4, self.size[1] - 4
                background_color: 0, 0, 0, 0  # Transparente para usar canvas
                color: 0, 0, 0, 1  # Texto negro
                font_size: 32
                on_press: root.go_back()
            
            Button:
                text: "üîÑ Actualizar"
                size_hint_x: 0.3
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1, 1, 1, 1  # Fondo blanco
                    Rectangle:
                        pos: self.pos[0] + 2, self.pos[1] + 2
                        size: self.size[0] - 4, self.size[1] - 4
                background_color: 0, 0, 0, 0  # Transparente para usar canvas
                color: 0, 0, 0, 1  # Texto negro
                font_size: 32
                on_press: root.refresh_reports()
            
            Widget:
                size_hint_x: 0.4
        
        # Contenedor principal con scroll
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  # Borde negro
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1, 1, 1, 1  # Fondo blanco
                Rectangle:
                    pos: self.pos[0] + 1, self.pos[1] + 1
                    size: self.size[0] - 2, self.size[1] - 2
            
            BoxLayout:
                id: reports_container
                orientation: 'vertical'
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                
                # Aqu√≠ se agregar√°n din√°micamente los reportes