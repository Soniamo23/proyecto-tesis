<ViewDetailedReportsAdminScreen>:
    canvas.before:
        Color:
            rgba: 255/255, 252/255, 242/255, 1  # #FFFCF2 - Fondo principal
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        
        # HEADER - 70dp altura
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(70)
            padding: [dp(15), dp(10)]
            spacing: dp(10)
            
            canvas.before:
                Color:
                    rgba: 204/255, 197/255, 185/255, 1  # #CCC5B9 - Surface
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 20/255, 26/255, 28/255, 1  # #141A1C - Border
                Line:
                    width: dp(1)
                    rectangle: (self.x, self.y, self.width, self.height)
            
            # Botón Volver
            Button:
                text: "Volver"
                size_hint_x: None
                width: dp(70)
                size_hint_y: None
                height: dp(40)
                background_color: (0, 0, 0, 0)  # Transparente
                color: 20/255, 26/255, 28/255, 1  # #141A1C
                font_size: sp(12)
                bold: True
                
                canvas.before:
                    Color:
                        rgba: 168/255, 159/255, 145/255, 1  # #A89F91 - Primary
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(8)]
                    Color:
                        rgba: 20/255, 26/255, 28/255, 1  # #141A1C - Border
                    Line:
                        width: dp(1)
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(8))
                
                on_press: root.go_back()
            
            # Título del Header
            Label:
                id: title_label
                text: "Reportes Detallados"
                font_size: sp(16)
                bold: True
                color: 20/255, 26/255, 28/255, 1  # #141A1C
                halign: 'center'
                valign: 'middle'
                text_size: self.size
            
            # Botón Actualizar
            Button:
                text: "Actualizar"
                size_hint_x: None
                width: dp(70)
                size_hint_y: None
                height: dp(40)
                background_color: (0, 0, 0, 0)  # Transparente
                color: 20/255, 26/255, 28/255, 1  # #141A1C
                font_size: sp(12)
                bold: True
                
                canvas.before:
                    Color:
                        rgba: 168/255, 159/255, 145/255, 1  # #A89F91 - Primary
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(8)]
                    Color:
                        rgba: 20/255, 26/255, 28/255, 1  # #141A1C - Border
                    Line:
                        width: dp(1)
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(8))
                
                on_press: root.refresh_reports()
        
        # CONTENIDO PRINCIPAL (sin recuadro del ScrollView)
        BoxLayout:
            orientation: 'vertical'
            padding: [dp(15), dp(10)]
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                
                BoxLayout:
                    id: reports_container
                    orientation: 'vertical'
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [dp(18), dp(15)]
        
        # FOOTER - 50dp altura  
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: [dp(20), dp(10)]
            
            canvas.before:
                Color:
                    rgba: 204/255, 197/255, 185/255, 1  # #CCC5B9 - Surface
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 20/255, 26/255, 28/255, 1  # #141A1C - Border
                Line:
                    width: dp(1)
                    points: [self.x, self.y + self.height, self.x + self.width, self.y + self.height]
            
            Label:
                text: "Desliza para ver más reportes"
                font_size: sp(14)
                color: 20/255, 26/255, 28/255, 0.7  # #141A1C con 70% opacidad
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                italic: True