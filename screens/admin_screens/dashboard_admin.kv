<DashboardAdminScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(16)
        
        # Header
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(120)
            spacing: dp(8)
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Fondo muy sutil para el header
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 1  # Borde sutil
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(1)
            
            Label:
                text: "Panel de Administrador"
                font_size: 32
                bold: True
                halign: 'center'
                valign: 'middle'
                color: 0, 0, 0, 1  # Texto negro
                size_hint_y: None
                height: dp(50)
                text_size: self.width, None
            
            Label:
                id: welcome_label
                text: "Bienvenido, Admin"
                font_size: 32
                halign: 'center'
                valign: 'middle'
                color: 0, 0, 0, 1  # Gris oscuro para subtítulo
                size_hint_y: None
                height: dp(40)
                text_size: self.width, None
        
        # Título de la sección de conductores
        Label:
            text: "Conductores de la Empresa"
            font_size: 32
            bold: True
            halign: 'center'
            valign: 'middle'
            color: 0, 0, 0, 1  # Texto negro
            size_hint_y: None
            height: dp(50)
            text_size: self.width, None
        
        # Lista de conductores con scroll
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Fondo muy sutil para el área de scroll
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 1  # Borde para el área de scroll
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(1)
            
            BoxLayout:
                id: drivers_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                padding: [dp(12), dp(12), dp(12), dp(12)]
        
        # Botón de cerrar sesión
        Button:
            text: "Cerrar Sesión"
            font_size: 32
            size_hint_y: None
            height: dp(50)
            background_color: 1, 1, 1, 1  # Fondo blanco
            color: 0, 0, 0, 1  # Texto negro
            bold: True
            on_press: root.logout()
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  # Borde negro
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(2)
            
            canvas.after:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1 if self.state == 'down' else 0, 0, 0, 0
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]