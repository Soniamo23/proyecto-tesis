<ViewReportsAdminScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(16)
        
        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            spacing: dp(8)
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.05  # Fondo muy sutil para el header
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 0.1  # Borde sutil
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(1)
            
            Label:
                id: driver_name_label
                text: "Reportes del Conductor admin"
                font_size: sp(20)
                bold: True
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                color: 0, 0, 0, 1  # Texto negro
                size_hint_x: 0.7
                padding: [dp(12), 0]
            
            Button:
                text: "Actualizar"
                size_hint_x: 0.15
                font_size: sp(12)
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                on_press: root.refresh_reports()
                
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, dp(6)
                        width: dp(2)
                
                canvas.after:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1 if self.state == 'down' else 0, 0, 0, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(6)]
            
            Button:
                text: "Volver"
                size_hint_x: 0.15
                font_size: sp(12)
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                on_press: root.go_back()
                
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, dp(6)
                        width: dp(2)
                
                canvas.after:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1 if self.state == 'down' else 0, 0, 0, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(6)]
        
        # Informaci칩n de resumen
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.03  # Fondo muy sutil para informaci칩n
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(6)]
                Color:
                    rgba: 0, 0, 0, 0.15  # Borde sutil
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(6)
                    width: dp(1)
            
            Label:
                text: "Reportes finales de todos los tipos de gestos detectados admin"
                font_size: sp(14)
                text_size: self.width - dp(24), None
                halign: 'left'
                valign: 'middle'
                color: 0.4, 0.4, 0.4, 1  # Gris oscuro para texto secundario
                padding: [dp(12), 0]
        
        # Lista de reportes con scroll
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.05  # Fondo muy sutil para el 치rea de scroll
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8)]
                Color:
                    rgba: 0, 0, 0, 0.2  # Borde para el 치rea de scroll
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, dp(8)
                    width: dp(1)
            
            BoxLayout:
                id: reports_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(12)
                padding: [dp(12), dp(12), dp(12), dp(12)]