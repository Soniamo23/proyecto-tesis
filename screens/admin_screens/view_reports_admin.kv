<ViewReportsAdminScreen>:
    canvas.before:
        Color:
            rgba: 255/255, 252/255, 242/255, 1  # #FFFCF2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        padding: 0

        # HEADER
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(70)
            padding: [dp(15), dp(10)]
            spacing: dp(10)

            canvas.before:
                Color:
                    rgba: 204/255, 197/255, 185/255, 1  # #CCC5B9
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 20/255, 26/255, 28/255, 1  # #141A1C
                Line:
                    width: dp(1)
                    rectangle: (self.x, self.y, self.width, self.height)

            Button:
                text: "Volver"
                size_hint: (None, None)
                size: dp(70), dp(40)
                font_size: sp(14)
                background_normal: ''
                background_color: 0, 0, 0, 0  # Transparente
                color: 20/255, 26/255, 28/255, 1  # #141A1C
                bold: True
                canvas.before:
                    Color:
                        rgba: 168/255, 159/255, 145/255, 1  # #A89F91
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(8)]
                    Color:
                        rgba: 20/255, 26/255, 28/255, 1  # #141A1C
                    Line:
                        width: dp(1)
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(8))
                on_press: root.go_back()

            Label:
                id: driver_name_label
                text: "Reportes del Conductor"
                font_size: sp(18)
                bold: True
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                color: 20/255, 26/255, 28/255, 1  # #141A1C

            Button:
                text: "Actualizar"
                size_hint: (None, None)
                size: dp(70), dp(40)
                font_size: sp(12)
                background_normal: ''
                background_color: 0, 0, 0, 0  # Transparente
                color: 20/255, 26/255, 28/255, 1  # #141A1C
                bold: True
                canvas.before:
                    Color:
                        rgba: 168/255, 159/255, 145/255, 1  # #A89F91
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(8)]
                    Color:
                        rgba: 20/255, 26/255, 28/255, 1  # #141A1C
                    Line:
                        width: dp(1)
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(8))
                on_press: root.refresh_reports()

        # CONTENIDO PRINCIPAL
        BoxLayout:
            orientation: 'vertical'
            padding: [dp(15), dp(15)]

            canvas.before:
                Color:
                    rgba: 255/255, 252/255, 242/255, 1  # #FFFCF2
                Rectangle:
                    pos: self.pos
                    size: self.size

            # LISTA DE REPORTES
            ScrollView:
                do_scroll_x: False
                scroll_type: ['bars']
                bar_width: dp(8)
                bar_color: 168/255, 159/255, 145/255, 1
                bar_inactive_color: 204/255, 197/255, 185/255, 0.5

                GridLayout:
                    id: reports_list
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(15)
                    padding: [dp(0), dp(0)]

        # FOOTER CON STATUS
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: [dp(20), dp(10)]

            canvas.before:
                Color:
                    rgba: 204/255, 197/255, 185/255, 1  # #CCC5B9
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 20/255, 26/255, 28/255, 1  # #141A1C
                Line:
                    width: dp(1)
                    points: [self.x, self.y + self.height, self.x + self.width, self.y + self.height]

            Label:
                id: status_label
                text: "Listo para cargar reportes"
                font_size: sp(14)
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                color: 20/255, 26/255, 28/255, 1
                italic: True