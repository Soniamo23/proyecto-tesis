<ViewReportsAdminScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(16)
        
        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            spacing: dp(12)
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Fondo blanco
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1  # Borde negro
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            Label:
                id: driver_name_label
                text: "Reportes del Conductor"
                font_size: sp(20)
                bold: True
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.7
                color: 0, 0, 0, 1  # Texto negro
                padding: dp(8), 0
            
            Button:
                text: "Actualizar"
                size_hint_x: 0.15
                font_size: sp(16)
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_press: root.refresh_reports()
            
            Button:
                text: "Volver"
                size_hint_x: 0.15
                font_size: sp(16)
                background_color: 1, 1, 1, 1  # Fondo blanco
                color: 0, 0, 0, 1  # Texto negro
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Borde negro
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_press: root.go_back()
        
        # Información de resumen
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(48)
            padding: dp(12), dp(8)
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Fondo blanco
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1  # Borde negro
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            Label:
                text: "Reportes finales de todos los tipos de gestos detectados"
                font_size: sp(16)
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: 0, 0, 0, 1  # Texto negro
        
        # Lista de reportes con scroll
        ScrollView:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Fondo blanco
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1  # Borde negro del ScrollView
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
            
            BoxLayout:
                id: reports_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(12)
                padding: dp(12)
                
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Fondo blanco del contenedor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                # Aquí se agregarán los widgets de reportes dinámicamente